<UserControl x:Class="POSApp.MenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POSApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="False" Background="{StaticResource PrimaryBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Checkout List -->
        <Border Grid.Row="01" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="4" Background="LightGray" BorderBrush="Aquamarine" BorderThickness="1">
            <TextBlock Text="j" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Aqua"></TextBlock>
        </Border>

        <!-- Menu Header -->
        <Grid x:Name="MenuHeader" Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="6">
            <Border Grid.Row="0" Grid.Column="0"
                Grid.RowSpan="1" Grid.ColumnSpan="6"
                BorderBrush="Black" BorderThickness="0,0,0,2"
                Background="Cyan">
                <TextBlock Text="Menu" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
            <Button Content="Settings" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0"
                    Grid.Column="1"/>
            <Button Content="Logout" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="595,0,0,0"
                    Click="Logout_Click"/>

        </Grid>


        <!-- Menu Items Panel -->
        <Grid x:Name="MenuItemsPanel" Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" Background="Red">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="Transparent">
                <UniformGrid x:Name="MenuItemsGrid" Columns="3" Rows="0" Margin="10" Background="Transparent">
                    <!-- Menu items will be added here dynamically -->
                </UniformGrid>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
